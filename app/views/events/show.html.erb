<div class="container my-5">
  <div class="row">
  <div class="col-6 mx-auto">
    <div class="text-center mb-5">
      <% if @event.host_id == current_user.id %>
        <%= link_to "編集画面へ", edit_event_path(@event), class: "btn btn-success btn-lg" %>
      <% else %>
        <button type="button" class="btn btn-outline-success btn-lg">イベントに参加する</button> 
      <% end %>
    </div>      

        <div class="card text-center">
            <div class="card-header pt-1 bg-success text-white">
            <p class="card-text">
                <small class="text-white">更新日：<%= @event.updated_at.strftime("%Y-%m-%d") %></small>
            </p>
            <h4><%=@event.host.name %></h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                開催日 <%= @event.event_date %>
                </h5>
                <h5 class="card-title">
                    <%= @event.setting_count %>
                    <small>人募集</small>
                </h5>
                <h3 class="card-text"><%= simple_format @event.content %></h3>
            </div>
            <div class="card-footer bg-success text-white">
                <% if @event.deadline_date %>
                <small>募集締め切り日 : <%= @event.deadline_date %></small>
                <% else %>
                <small>募集締め切り日 : 無期限<%= @event.deadline_date %></small>
                <% end %>
            </div>


        </div>
        
        <div class="card text-center p-3 ">

            <p class="mb-2 mt-3 text-center">使用するクーポン</p>
                <div class="card text-center">
                <div class="card-header pt-1 bg-info text-white">
                <p class="card-text">
                    <small class="text-white">更新日：<%= @event.coupon.updated_at.strftime("%Y-%m-%d") %></small>
                </p>
                <h4><%=@event.coupon.restaurant.name %></h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= @event.coupon.min_setting_count %>
                        <small>人以上の来店で利用可能</small>
                    </h5>
                    <h3 class="card-text"><%= simple_format @event.coupon.content %></h3>
                    
                </div>
                <div class="card-footer bg-info text-white">
                    <% if @event.coupon.exp_date %>
                        有効期限 : <%= @event.coupon.exp_date %>
                    <% else %>
                        有効期限 : 無期限<%= @event.coupon.exp_date %>
                    <% end %>
                </div>
             </div>
        </div>

    </div>
  </div>
</div>