<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">

        <h2 class="text-primary">クーポン編集</h2>
        <%= form_for @coupon do |f| %>

            <div class="form-group">
                <%= f.label :min_setting_count, "人数" %><br />
                <%= f.number_field :min_setting_count, autofocus: true, class: "form-control" %>
                <p>人以上でクーポン使用可能</p>
            </div>

            <div class="form-group">
                <%= f.label :content, "クーポン内容" %><br />
                <%= f.text_field :content, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :exp_date, "有効期限" %><br />
                <%= f.date_field :exp_date, autofocus: true, class: "form-control" %>
            </div>

            <div class="actions">
                <%= f.submit "更新", class: "btn btn-primary mb-1" %>
            </div>

        <% end %>

    </div>
  </div>
</div>