<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<% @restaurants.each do |restaurant| %>
    <hr>
    <p>店舗名: <%=link_to restaurant.name, restaurant_path(restaurant.id) %></p>
    <p>メールアドレス: <%=link_to restaurant.email, restaurant_path(restaurant.id) %></p>
    <p>住所: <%=link_to restaurant.address, restaurant_path(restaurant.id) %></p>
<% end %>