<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">

      <h2 class="text-primary" >プロフィール編集</h2>

      <%= form_for @restaurant do |f| %>

        <div class="form-group">
          <%= f.label :name, "店舗名", class: "label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", class: "label" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "btn btn-primary mb-1" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
