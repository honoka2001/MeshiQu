<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">

      <h2 class="text-primary">プロフィール編集</h2>

        <%= form_for @user do |f| %>

          <div class="form-group">
            <%= f.label :name, "ユーザー名", class: "label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :school, "学校名", class: "label" %>
            <%= f.text_field :school, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :grade, "学年", class: "label" %>
            <%= f.number_field :grade, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :department, "学科", class: "label" %>
            <%= f.text_field :department, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :gender, "性別", class: "label" %>
            <%= f.number_field :gender, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "更新", class: "btn btn-primary mb-1" %>
          </div>

        <% end %>

    </div>
  </div>
</div>